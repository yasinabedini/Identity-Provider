@page
@model Project.Client.Pages.Shared.User.IndexModel
@{
}


<div class="h5 mb-5 fw-bold">لیست کاربران</div>

<div class="text-end mb-2">
    <a asp-action="Save" class="btn btn-success btn-sm"> افزودن کاربر</a>
</div>
<div class="rounded border p-4">
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th>id</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>PhoneNumber</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <th>@user.Id</th>                    
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.PhoneNumber</td>
                        
                    </tr>
                }
          
            </tbody>
        </table>
    </div>   


</div>